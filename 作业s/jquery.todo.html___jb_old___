<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Todo</title>
    <script src="https://code.jquery.com/jquery-3.1.0.min.js"
            integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s=" crossorigin="anonymous"></script>
    <script>
      $('#todo-add-button').on('click'){
        todo = $('#todo-add-input').val()
        todo_list = $('#todo-list')
        todo_list.prepend(todo)
      }


    </script>
</head>
<body>
    <h1 class="h1">Todo</h1>
    <input id="todo-add-input" type="text" name="todo">
    <button id="todo-add-button" type="submit">Add Todo</button>
    <div id="todo-list">
    </div>
</body>
</html>
